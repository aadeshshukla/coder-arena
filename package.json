{
  "name": "coder-arena",
  "version": "1.0.0",
  "description": "A continuously running digital fighting arena where AI fighters battle 24/7",
  "main": "dist/server/src/index.js",
  "scripts": {
    "dev:server": "nodemon --watch 'server/**/*.ts' --exec 'ts-node' server/src/index.ts",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:server": "tsc -p tsconfig.json",
    "build:client": "cd client && npm run build",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server/src/index.js",
    "install:all": "npm install && cd client && npm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["ai", "fighting", "arena", "websocket", "typescript"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^25.2.3",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/socket.io": "^3.0.1",
    "express": "^4.21.2",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  }
}
