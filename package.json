{
  "name": "coder-arena",
  "version": "1.0.0",
  "description": "A continuously running digital fighting arena where AI fighters battle 24/7",
  "main": "dist/server/src/index.js",
  "scripts": {
    "dev:server": "nodemon --watch 'server/**/*.ts' --exec npx ts-node server/src/index.ts",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:server": "tsc -p tsconfig.json",
    "build:client": "cd client && npm run build",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server/src/index.js",
    "install:all": "npm install && cd client && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "ai",
    "fighting",
    "arena",
    "websocket",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.2.3",
    "@types/socket.io": "^3.0.1",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.3",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  }
}
